<div class="container col-lg-12">
  <div class="row">
    <h2><%= link_to post.title, post %></h2>
  </div>
  <div class="row">
    <p>Категории: <%= render post.categories %></p>
  </div>

  <div class="row">
    <p><%= truncate(post.body, length: 100) %></p>
    <p><strong><%= link_to 'Читать далее', post %></strong></p> <br>
    <p><%= link_to 'Одобрить', approve_admin_post_path(post.id), method: :patch %></p> |
    <p><%= link_to 'Отменить публикацию', reject_admin_post_path(post.id), method: :patch %> </p><br>
  </div>
  <hr>
</div>