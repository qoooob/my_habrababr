
<h1>Посты находящиеся на модерации:</h1>

<tr>
  <td><%= link_to t('.newpost'), new_post_path, class: 'btn btn-large' %></td>
  <% if user_signed_in? %>
      <td><%= link_to t('.draft'), unpublished_posts_path, class: 'btn btn-large' %></td>
  <% end %>
</tr>
<% if @category %>
    <h1><%= 'Список публикаций категории '+@category.name %></h1>
<% else %>
    <h1><%= @title %></h1>
<% end %>


<%= render @posts %>

<br>

